<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Довідка{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('bundles/pinanobootstrap3/css/bootstrap.min.css') }}" type="text/css" media="all">

    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
</head>
<body>
<div id="header" class="container">
    <div class="row">
        <div class="col-lg-6">
            <div class="row">
                <div class="col-lg-4">
                    <h2 id="logo" >Довідка</h2>
                </div>
                <div class="col-lg-6">
                    <input type="text" class="form-control" placeholder="Пошук Компанії">
                </div>
                <div class="col-lg-2">
                    <button class="btn btn-default">Пошук</button>
                </div>
            </div>
        </div>
        <div class="col-lg-6 text-right">
            <a class="btn btn-success" href="{{ path('sonata_admin_dashboard') }}">Добавити компанію</a>
        </div>
    </div>
</div>

<div class="container">
    {% block content %}{% endblock %}
</div>

<div id="footer" class="container">
    <a href="">О проекте</a>
    <a href="">RSS</a>
    <a href="">API</a>
    <a href="">Партнёрам</a>
</div>

{% block javascripts %}
    <script src="{{ asset('bundles/pinanobootstrap3/js/bootstrap.js') }}"></script>
{% endblock %}
</body>
</html>